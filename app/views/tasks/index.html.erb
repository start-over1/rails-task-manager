<div class="container">
<h1>Tasks</h1>
  <ul class="list-group left-corner">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between">
        <div><input class="form-check-input me-1 link-dark" type="checkbox" value="" aria-label="...">
        <%= link_to task.title, task_path(task), class: "link-secondary", style:'text-decoration: none'%>
        <%= link_to delete_path(task), data: {"turbo_method": :delete, turbo_confirm: "Are you sure?"} do %></div>
          <div><i class="fa-solid fa-trash"></i></div>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%# <div class="center" >
  <%= link_to "Create Task", tasks_new_path %>
  <%# </div> %>
  <div class="d-grid gap-2 col-6 mx-auto">
     <%= link_to "Create Task", tasks_new_path, class: "btn btn-secondary"%>
  </div>
</div>
